<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Electricity Bill Calculator</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="index.css" />
  </head>
  <body>
    <nav class="nbar">
      <ul>
        <li id="tit">Electric Bill Handler</li>
        <li><a href="/FirstForm">Entry Master File</a></li>
        <li><a href="/SecondForm">Entry Transaction File</a></li>
        <li><a href="/ShowPage">Show Print File</a></li>
      </ul>
    </nav>
   
   

    <div class="container">
      <h4 style="text-align: center; font-size: 40px; padding: 20px;"><u>Master Table</u></h4>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">Department</th>
            <th scope="col">Previous Dues</th>
            <th scope="col">Location</th>
            <th scope="col">Last Reading</th>
            <th scope="col">Last Reading Date</th>
            <th scope="col">Meter Charges</th>
            <th scope="col">Unit Rate</th>
            <th scope="col">Allocation Date</th>
            <!-- <th scope="col">Current Month Payment</th> -->
            <th scope="col">Last Payment Date</th>
          </tr>
        </thead>
        <tbody>
            <% master.forEach(function(el){ %>
                <tr>
                    <th scope="row"> <%= el.Code %> </th>
                    <td><%= el.Name %></td>
                    <td><%= el.Dept %></td>
                    <td><%= el.PrevBalance %></td>
                    <td><%= el.Location %></td>
                    <td><%= el.LastReading %></td>
                    <td><%= el.LastDate %></td>
                    <td><%= el.MeterCharge %></td>
                    <td><%= el.UnitRate %></td>
                    <td><%= el.Allocation %></td>
                    <!-- <td><%= el.CurrentPayment %></td> -->
                    <td><%= el.LastPaymentDate %></td>
                  </tr>
            <% }) %>
          
        </tbody>
      </table>
    </div>
    <hr style="margin-top: 50px; border: 10px solid rgb(21, 31, 3);
    border-radius: 5px;">
    <div class="container">
      <h4 style="text-align: center; font-size: 40px; padding: 20px;"><u>Transaction Table</u></h4>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Code</th>
            <th scope="col">Current Reading Date</th>
            <th scope="col">Current Reading</th>
            <th scope="col">Current Payment</th>
            <th scope="col">Current Payment Date</th>
            <!-- <th scope="col">Handle</th> -->
          </tr>
        </thead>
        <tbody>
            <% transaction.forEach(function(el){ %>
                <tr>
                    <th scope="row"> <%= el.Code %></th>
                    <td><%= el.ToDate %></td>
                    <td><%= el.CurrentReading %></td>
                    <td><%= el.CurrentPayment %></td>
                    <td><%= el.CurrentPaymentDate %></td>
                  </tr>
            <% }) %>
        </tbody>
      </table>
    </div>

    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script> -->
  </body>
</html>
